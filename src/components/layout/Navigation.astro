---
import Button from "../ui/Button.astro";
---

<nav class="nav-bar">
  <div class="nav-bar__container">
    <a href="/" class="nav-bar__logo" aria-label="Home">
      <img src="/images/PVLogo.png" alt="" height="48px" width="117px" />
