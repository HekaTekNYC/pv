<style>
  nav {
    position: sticky;
    top: 0;
    background-color: var(--primary);
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 35px;
    height: 72px;
    width: 100%;
    z-index: 1000;
  }

  .nav-bar__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1300px;
    height: 100%;
  }

  .nav-bar__logo {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }

  .nav-bar__hamburger {
    height: 35px;
    width: 35px;
    cursor: pointer;
    background: none;
    border: none;
    padding: 0;
  }

  /* Mobile nav */
  .nav-bar__links {
    position: absolute;
    top: 72px;
    left: 0;
    width: 100%;
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    background-color: var(--primary);
    padding: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    transition:
      max-height 0.4s ease,
      opacity 0.4s ease,
      padding 0.3s ease;
  }

  .nav-bar__links.active {
    max-height: calc(100vh - 72px);
    opacity: 1;
    padding: 40px 0;
    overflow-y: auto;
  }

  .nav-bar__links ul {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    gap: 20px;
    width: 100%;
    margin-bottom: 10px;
  }

  .nav-bar__links li {
    width: 100%;
    text-align: center;
  }

  .nav-bar__links a {
    font-size: 1.3rem;
    font-weight: 500;
    color: var(--white);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 10px 0;
  }

  .nav-bar__links a:hover {
    color: var(--neutral);
  }


/* Mobile dropdown closed by default */
.nav-bar__dropdown .nav-bar__dropdown-menu {
  display: none; 
  flex-direction: column;
  align-items: center;
  width: 100%;
}

  .nav-bar__dropdown.open .nav-bar__dropdown-menu {
    display: flex;
  }

  .nav-bar__dropdown.open > .nav-bar__link {
    padding-bottom: 15px;
  }

  .nav-bar__book-now {
    margin-top: auto;
    padding: 20px 0;
  }

  .nav-bar__caret {
    width: 10.54px;
    height: 6.25px;
    transition: transform 0.2s ease;
  }

    @media (min-width: 576px) {
    .nav {
      padding: 0 40px;
    }
  }


  /* Desktop */
  @media (min-width: 992px) {
    nav {
        padding: 0 80px;
        height: 104px;
    }
    
    .nav-bar__hamburger {
      display: none;
    }

    .nav-bar__links {
      position: static;
      max-height: none;
      opacity: 1;
      flex-direction: row;
      justify-content: flex-end;
      align-items: center;
      width: auto;
      padding: 0;
      overflow: visible;
    }

    .nav-bar__links a {
        font-size: 1rem ;
    }

    .nav-bar__links ul {
      flex-direction: row;
      margin-bottom: 0;
    }

  .nav-bar__dropdown .nav-bar__dropdown-menu {
    display: none; 
    position: absolute;
    top: 100%;
    left: 0;
    background: var(--primary);
  }

  .nav-bar__dropdown:hover .nav-bar__dropdown-menu {
    display: flex; 
    flex-direction: column;
  }
}

    .nav-bar__dropdown:hover .nav-bar__dropdown-menu {
      display: flex;
      flex-direction: column;
    }

    .nav-bar__dropdown-menu li a {
      padding: 10px 20px;
      font-size: 1rem;
      display: block;
    }

    .nav-bar__book-now {
      margin-top: 0;
    }
  }

  @media (min-width: 1200px) {
    nav {
      padding: 0 100px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const hamburger = document.querySelector(".nav-bar__hamburger");
    const navLinks = document.querySelector(".nav-bar__links");

    // Hamburger toggle
    hamburger.addEventListener("click", (e) => {
      e.stopPropagation();
      navLinks.classList.toggle("active");
    });

    // Close when clicking outside
    document.addEventListener("click", (e) => {
      if (
        navLinks.classList.contains("active") &&
        !navLinks.contains(e.target) &&
        !hamburger.contains(e.target)
      ) {
        navLinks.classList.remove("active");
      }
    });

    // Dropdown toggle for mobile
    document.querySelectorAll(".nav-bar__dropdown > a").forEach((link) => {
      link.addEventListener("click", (e) => {
        if (window.innerWidth < 992) {
          e.preventDefault();
          link.parentElement.classList.toggle("open");
        }
      });
    });

    // Reset on resize
    window.addEventListener("resize", () => {
      if (window.innerWidth >= 992) {
        navLinks.classList.remove("active");
        document.querySelectorAll(".nav-bar__dropdown").forEach((dd) => {
          dd.classList.remove("open");
        });
      }
    });
  });
</script>
