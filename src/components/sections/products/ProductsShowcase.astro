---
import { productCategories } from "../../../data/product-categories";
---

<section class="products-showcase" aria-labelledby="products-showcase-title">
  <div class="products-showcase__container container">
    <!-- Header -->
    <header class="products-showcase__header">
      <h2 id="products-showcase-title" class="products-showcase__title">
        Stylish Window Coverings for Every Room
      </h2>
      <p class="products-showcase__intro">
        Discover our curated selection of window treatments, from classic to
        contemporary styles. Each option is expertly installed to enhance your
        space with the perfect balance of beauty, comfort, and functionality.
      </p>
    </header>

    <ul class="products-showcase__grid" role="list">
      {
        productCategories.map((cat) => (
          <li class="products-showcase__card">
            <a href={`/products/${cat.slug}`} class="products-showcase__link">
              <figure class="products-showcase__media">
                <picture>
                  <source srcset={cat.image} type="image/webp" />
                  <source
                    srcset={cat.image.replace(".webp", ".png")}
                    type="image/png"
                  />
                  <img
                    src={cat.image.replace(".webp", ".png")}
                    alt={cat.title}
                    width="413"
                    height="420"
                    loading="lazy"
                    decoding="async"
                  />
                </picture>
              </figure>
              <div class="products-showcase__body">
                <h3 class="products-showcase__card-title">{cat.title}</h3>
                <p class="products-showcase__blurb">{cat.blurb}</p>
                <span class="products-showcase__more">
                  Learn More
                  <svg
                    class="chev"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path
                      d="M9 18l6-6-6-6"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                </span>
              </div>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  .products-showcase {
    background: var(--grey-10, #ededed);
  }

  .products-showcase__container {
    display: flex;
    flex-direction: column;
    gap: 48px;
  }

  .products-showcase__header {
    display: grid;
    gap: 16px;
  }

  .products-showcase__title {
    margin: 0;
    font-family: var(--ff-heading);
    font-weight: var(--fw-bold);
    font-size: var(--fs-h2);
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: var(--primary);
    min-width: 0;
  }

  .products-showcase__intro {
    margin: 0;
    font-family: var(--ff-body);
    font-size: var(--fs-body-r);
    line-height: 1.6;
    color: var(--text);
    max-width: 66ch;
    min-width: 0; /* allow wrapping in grid track */
  }

  /* ===== Cards grid ===== */
  .products-showcase__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 32px;
    margin: 0;
    padding: 0;
    width: 100%;
  }

  .products-showcase__card {
    list-style: none;
    width: 100%;
    border-radius: 2px;
    overflow: hidden;
  }

  .products-showcase__link {
    display: grid;
    grid-template-rows: auto 1fr;
    text-decoration: none;
    color: inherit;
    background: var(--white);
    border: 1px solid color-mix(in srgb, #000 8%, transparent);
    box-shadow: 0 1px 2px rgb(0 0 0 / 6%);
    transition: box-shadow 120ms ease;
    width: 100%;
    height: 100%;
  }
  .products-showcase__link:hover {
    box-shadow: 0 6px 14px rgb(0 0 0 / 12%);
  }

  .products-showcase__media {
    margin: 0;
    overflow: hidden;
    background: #e9ecef;
    width: 100%;
  }

  .products-showcase__media {
    aspect-ratio: 343 / 360;
  }

  .products-showcase__media picture,
  .products-showcase__media img {
    width: 100%;
    height: 100%;
    display: block;
  }

  .products-showcase__media img {
    object-fit: cover;
  }

  .products-showcase__body {
    display: grid;
    gap: 8px;
    padding: 12px 16px 16px 16px;
    width: 100%;
    box-sizing: border-box;
  }

  .products-showcase__card-title {
    margin: 0;
    font-family: var(--ff-heading);
    font-weight: var(--fw-semibold, 600);
    font-size: var(--fs-h3-lg);
    line-height: 1.35;
    color: var(--primary);
    word-wrap: break-word;
  }

  .products-showcase__blurb {
    margin: 0 0 6px 0;
    font-family: var(--ff-body);
    font-size: 16px;
    line-height: 1.5;
    color: var(--text);
    word-wrap: break-word;
  }

  .products-showcase__more {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-weight: var(--fw-semibold, 600);
    font-size: 16px;
    color: var(--secondary);
  }
  .products-showcase__more .chev {
    transform: translateY(1px);
  }

  /* ===== Media Queries ===== */

  @media (min-width: 690px) {
    .products-showcase__header {
      grid-template-columns: 1fr;
      gap: 12px;
    }
  }

  @media (min-width: 768px) {
    .products-showcase__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 24px;
    }
  }

  @media (min-width: 1024px) {
    .products-showcase__container {
      gap: 64px;
    }

    .products-showcase__header {
      display: grid;
      grid-template-columns:
        minmax(0, 680px)
        minmax(0, 560px);
      column-gap: 40px;
      align-items: start;
    }

    .products-showcase__title {
      max-width: 680px;
      min-height: 118px;
      min-width: 0;
    }

    .products-showcase__intro {
      max-width: 560px;
      min-height: 96px;
      min-width: 0;
      justify-self: start;
    }

    .products-showcase__grid {
      grid-template-columns: repeat(3, 1fr);
      row-gap: 32px;
      column-gap: 20px;
    }

    .products-showcase__media {
      aspect-ratio: 413 / 420;
    }
  }
</style>
