---
import Button from "../../ui/Button.astro";
import { getFeaturedImages } from "../../../data/gallery";
---

<section class="our-work">
  <div class="our-work__container container">
    <h2>Our Work in Real Spaces</h2>
    <div class="our-work__grid">
      {
        getFeaturedImages().map((image) => (
          <div class="our-work__media">
            <img
              src={image.src}
              alt={image.alt}
              loading="lazy"
              decoding="async"
            />
          </div>
        ))
      }
    </div>
    <Button href="/gallery" color="neutral" variant="default">
      View the Gallery
    </Button>
  </div>
</section>

<style>
  .our-work__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 32px;
  }

  .our-work__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
    padding-top: 16px;
  }

  .our-work__media {
    position: relative;
    overflow: hidden;
  }

  .our-work__media img {
    width: 100%;
    height: 360px;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .our-work__media:hover img {
    transform: scale(1.05);
  }

  @media (min-width: 768px) {
    .our-work__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
  }
  @media (min-width: 1024px) {
    .our-work__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 28px;
      padding-top: 0;
    }

    .our-work__container {
      gap: 48px;
    }
  }
</style>
