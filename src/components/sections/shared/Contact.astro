---
// import ContactForm from "../../sections/ui/ContactForm.astro";
import ContactForm from "../../ContactForm.astro";
---

<section class="contact-section" aria-labelledby="contact-section-title">
  <!-- LEFT: background image with overlaid contact card -->
  <div
    class="contact-section__media"
    role="img"
    aria-label="Interior room with window coverings"
  >
    <div class="contact-section__panel">
      <ContactForm />
    </div>
  </div>

  <!-- RIGHT: brand + quick facts -->
  <aside class="contact-section__info">
    <div class="contact-section__info-wrap">
      <h2 id="contact-section-title" class="sr-only">Get in Touch</h2>

      <img
        class="contact-section__logo"
        src="/images/Logo.svg"
        alt="PerfectView Window Coverings"
        width="420"
        height="120"
        decoding="async"
      />

      <ul class="contact-section__pills" role="list">
        <li class="contact-section__pill">
          <img
            class="contact-section__icon"
            src="/icons/contact-family.svg"
            width="20"
            height="20"
            alt=""
            aria-hidden="true"
          />
          <span>Family Owned</span>
        </li>
        <li class="contact-section__pill">
          <img
            class="contact-section__icon"
            src="/icons/contact-location.svg"
            width="20"
            height="20"
            alt=""
            aria-hidden="true"
          />
          <span>Serving Northern Utah &amp; Beyond</span>
        </li>
        <li class="contact-section__pill">
          <img
            class="contact-section__icon"
            src="/icons/contact-phone.svg"
            width="20"
            height="20"
            alt=""
            aria-hidden="true"
          />
          <span>(801) 555-1234</span>
        </li>
      </ul>

      <p class="contact-section__note">
        For further information, please don’t hesitate to reach out using the
        contact form on the left.
      </p>
    </div>
  </aside>
</section>

<style>
  /* ------- Utilities ------- */
  .sr-only {
    position: absolute !important;
    height: 1px;
    width: 1px;
    overflow: hidden;
    clip: rect(1px, 1px, 1px, 1px);
    white-space: nowrap;
  }

  /* ===== Layout shell ===== */
  .contact-section {
    display: grid;
    grid-template-columns: 1fr;
    min-height: 70vh;
    background: var(--white);
  }
  @media (min-width: 1024px) {
    .contact-section {
      grid-template-columns: 1fr 1fr;
      min-height: 82vh;
    }
  }

  /* ===== Left : media ===== */
  .contact-section__media {
    position: relative;
    background: url("/images/contact-section.png") center / cover no-repeat;
    min-height: 520px;
    display: flex;
    align-items: center; /* vertical center */
    justify-content: center; /* horizontal center */

    /* keep breathing room against edges on small screens */
    padding: clamp(16px, 4vw, 64px);
  }

  /* Card panel size + feel (matches Figma closer) */
  .contact-section__panel {
    width: min(760px, 94%); /* ← wider than before */
    background: var(--neutral-lightest);
    border: 1px solid var(--neutral-lighter);
    border-radius: 2px;
    box-shadow: 0 10px 30px rgb(0 0 0 / 12%);
    /* padding: clamp(20px, 3.2vw, 32px); bigger internal breathing room */
  }

  /* Make embedded Contact component match Figma inside the card */
  .contact-section :where(.contact) {
    background: transparent;
  }
  .contact-section :where(.contact) .container {
    padding: 0;
  }

  /* Header spacing & readable width for lead */
  .contact-section :where(.contact__header) {
    margin-bottom: 16px;
  }
  .contact-section :where(.contact__lead) {
    max-width: 54ch;
  }

  /* Grid spacing in the form (row/column rhythm) */
  .contact-section :where(.contact__grid) {
    row-gap: 20px; /* vertical gap */
    column-gap: 24px; /* horizontal gap (Figma) */
  }
  /* two columns on desktop already handled by component; ensure feel matches */
  @media (min-width: 900px) {
    .contact-section :where(.contact__grid) {
      grid-template-columns: 1fr 1fr;
    }
  }

  /* Field sizes (inputs ~48px tall per Figma) */
  .contact-section :where(.contact__input, .contact__textarea) {
    padding: 12px 16px;
  }
  .contact-section :where(.contact__textarea) {
    min-height: 200px;
  }

  /* Actions – left aligned like Figma */
  .contact-section :where(.contact__actions) {
    justify-content: flex-start;
    padding-top: 2px;
  }

  /* ===== Right : info panel ===== */
  .contact-section__info {
    background: var(--secondary);
    color: var(--white);
    display: grid;
    place-items: center;
    padding: clamp(28px, 6vw, 72px);
  }
  .contact-section__info-wrap {
    width: min(880px, 92%);
    text-align: center;
  }

  .contact-section__logo {
    display: block;
    margin-inline: auto;
    width: min(420px, 80%);
    height: auto;
    margin-bottom: clamp(16px, 3vw, 28px);
  }

  .contact-section__pills {
    display: grid;
    grid-template-columns: 1fr;
    gap: 14px;
    margin: 12px 0 18px;
    padding: 0;
  }
  @media (min-width: 640px) {
    .contact-section__pills {
      grid-template-columns: repeat(3, 1fr);
      gap: 16px;
    }
  }

  .contact-section__pill {
    display: grid;
    place-items: center;
    gap: 8px;
    padding: 16px;
    border-radius: 2px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.18);
    font-family: var(--ff-body);
    font-size: var(--fs-body-r);
  }
  .contact-section__icon {
    width: 32px;
    height: 32px;
    object-fit: contain;
    opacity: 0.95;
  }

  .contact-section__note {
    margin: 10px auto 0;
    max-width: 62ch;
    font-family: var(--ff-body);
    font-size: var(--fs-body-r);
    line-height: 1.65;
    color: color-mix(in srgb, var(--white) 88%, transparent);
  }
  /* iPad Pro / Landscape tablet: tighten and balance the split */
  @media (min-width: 1024px) and (max-width: 1279px) {
    /* 1) Make the two halves feel even and vertically centered together */
    .contact-section {
      grid-template-columns: 1fr 1fr; /* keep two equal halves */
      align-items: center; /* center both columns vertically */
      min-height: 90vh; /* gives space to breathe */
    }

    /* 2) Left card: wider panel + true 64px padding */
    .contact-section__panel {
      width: 680px; /* sweet spot for iPad Pro */
      padding: 64px; /* match Figma card padding */
    }

    /* 3) Make the form look desktop-like on iPad Pro */
    .contact-section :where(.contact__header) {
      margin-bottom: 20px;
    }
    .contact-section :where(.contact__lead) {
      max-width: 52ch;
    }

    /* Two-column grid with Figma sizing */
    .contact-section :where(.contact__grid) {
      grid-template-columns: 226px 226px; /* fixed field widths */
      column-gap: 24px;
      row-gap: 20px;
    }

    /* Field heights per Figma */
    .contact-section :where(.contact__input) {
      height: 48px;
      padding: 12px 14px;
    }

    /* Textarea 472 × 120; left-align under the grid */
    .contact-section :where(.contact__textarea) {
      width: 472px;
      min-height: 120px;
      padding: 12px 14px;
    }

    /* Make the label + field block respect the fixed widths */
    .contact-section :where(.contact__field) {
      max-width: 226px; /* first four inputs */
    }
    .contact-section :where(.contact__field.contact__field--span2) {
      max-width: none; /* allow the textarea row to grow */
      grid-column: 1 / -1; /* span both columns */
    }

    /* Actions: left align and give breathing room */
    .contact-section :where(.contact__actions) {
      grid-column: 1 / -1;
      justify-content: flex-start;
      padding-top: 8px;
    }

    /* 4) Right column: scale & tighten */
    .contact-section__info-wrap {
      width: min(720px, 92%);
    }
    .contact-section__logo {
      width: 360px; /* keeps logo classy, not dominant */
      margin-bottom: 20px;
    }

    .contact-section__pills {
      grid-template-columns: repeat(3, minmax(180px, 1fr));
      gap: 14px;
      margin: 10px 0 14px;
    }
    .contact-section__pill {
      padding: 14px; /* a hair smaller than desktop */
      border-radius: 2px;
    }
    .contact-section__icon {
      width: 28px;
      height: 28px;
    }

    .contact-section__note {
      max-width: 56ch;
      font-size: var(--fs-body-r);
      line-height: 1.55;
    }
  }
</style>
