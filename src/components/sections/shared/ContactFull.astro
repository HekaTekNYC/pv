---
import ContactForm from "../../ContactForm.astro";
---

<section class="contact-full" aria-labelledby="contact-full-title">
  <div class="contact-full__left">
    <div class="contact-full__bg-img">
      <picture>
        <!-- Mobile WebP -->
        <source
          srcset="/images/contact-full-mbl.webp"
          type="image/webp"
          media="(max-width: 1023px)"
        />
        <!-- Mobile PNG fallback -->
        <source
          srcset="/images/contact-full-mbl.png"
          type="image/png"
          media="(max-width: 1023px)"
        />
        <!-- Desktop WebP -->
        <source
          srcset="/images/contact-full-dsk.webp"
          type="image/webp"
          media="(min-width: 1024px)"
        />
        <!-- Desktop PNG fallback -->
        <source
          srcset="/images/contact-full-dsk.png"
          type="image/png"
          media="(min-width: 1024px)"
        />
        <!-- Final fallback -->
        <img
          src="/images/contact-full-dsk.png"
          alt="Elegant kitchen with full length windows and sheer pleated shades"
          class="contact-bg-img"
          width="1028"
          height="854"
          loading="lazy"
          decoding="async"
        />
      </picture>
    </div>
    <div class="contact-full__form">
      <ContactForm />
    </div>
  </div>
  <!-- RIGHT: brand + quick facts -->
  <div class="contact-full__right">
    <div class="contact-full__right-wrap">
      <img
        class="contact-full__logo"
        src="/images/Logo.svg"
        alt="PerfectView Window Coverings"
        width="420"
        height="120"
        decoding="async"
      />

      <ul class="contact-full__pills" role="list">
        <li class="contact-full__pill">
          <img
            class="contact-full__icon"
            src="/icons/contact-family.svg"
            width="20"
            height="20"
            alt=""
            aria-hidden="true"
          />
          <span>Family Owned</span>
        </li>
        <li class="contact-full__pill">
          <img
            class="contact-full__icon"
            src="/icons/contact-location.svg"
            width="20"
            height="20"
            alt=""
            aria-hidden="true"
          />
          <span>Serving Northern Utah &amp; Beyond</span>
        </li>
        <li class="contact-full__pill">
          <img
            class="contact-full__icon"
            src="/icons/contact-phone.svg"
            width="20"
            height="20"
            alt=""
            aria-hidden="true"
          />
          <span>(801) 555-1234</span>
        </li>
      </ul>

      <p class="contact-full__note">
        For further information, please donâ€™t hesitate to reach out using the
        contact form on the left.
      </p>
    </div>
  </div>
</section>

<style>
  .contact-full {
    position: relative;
    width: 100%;
  }

  .contact-full__left {
    position: relative;
    width: 100%;
    height: 100%;
    max-width: 1300px;
    margin: 0 auto;
    padding: clamp(60px, 8vw, 100px) clamp(16px, 5vw, 64px);
  }

  .contact-full__bg-img {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .contact-full__bg-img picture {
    display: block;
    width: 100%;
    height: 100%;
  }

  .contact-full__bg-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  /* The form panel (foreground) */
  .contact-full__form {
    position: relative;
    width: 100%;
    z-index: 1;
  }

