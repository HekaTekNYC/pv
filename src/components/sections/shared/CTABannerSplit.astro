---
import Button from "../../ui/Button.astro";
---

<section class="banner-split">
  <div class="banner-split__image">
    <picture>
      <!-- Mobile WebP -->
      <source
        srcset="/images/banner-sp-mbl.webp"
        media="(max-width: 1023px)"
        type="image/webp"
      />
      <!-- Mobile PNG fallback -->
      <source
        srcset="/images/banner-sp-mbl.png"
        media="(max-width: 1023px)"
        type="image/png"
      />
      <!-- Desktop WebP -->
      <source
        srcset="/images/banner-sp-dsk.webp"
        media="(min-width: 1024px)"
        type="image/webp"
      />
      <!-- Desktop PNG fallback -->
      <source
        srcset="/images/banner-sp-dsk.png"
        media="(min-width: 1024px)"
        type="image/png"
      />
      <!-- Final fallback -->
      <img
        src="/images/banner-sp-dsk.png"
        alt="Your banner description"
        class="banner-split__image"
        width="1280"
        height="854"
        loading="lazy"
      />
    </picture>
  </div>
  <div class="banner-split__overlay"></div>
  <div class="banner-split__container container">
    <div class="banner-split__info">
      <h2>Let’s Transform Your Windows Today</h2>
      <p>
        Bring your vision to life with custom-designed window coverings that
        combine beauty, function, and expert care. Let’s create a perfect
        view—together.
      </p>
      <Button href="/about" color="neutral" bordered variant="default"
        >Request Your Free Consultation</Button
      >
    </div>
    <div class="banner-split__spacer"></div>
  </div>
</section>

<style>
  .banner-split {
    position: relative;
    display: flex;
    flex-direction: column;
    position: relative;
    min-height: 400px;
  }

  .banner-split__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 2;
  }

  .banner-split__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--secondary);
    opacity: 0.9;
    z-index: 3;
  }

  .banner-split__container {
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 4;
  }
  .banner-split__info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }
  .banner-split__spacer {
    display: none;
  }
  .banner-split__info h2 {
    color: var(--white) !important;
  }
  .banner-split__info p {
    color: var(--grey-10) !important;
    padding: 16px 0 32px;
  }

  @media (min-width: 1024px) {
  }
</style>
