---
// import Carousel from "../";
interface Props {
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
  extraText?: string;
}

const {
  title = "Beautiful Window Coverings Beautifully Crafted for You",
  subtitle = "Enhance your home or business with stylish, custom-fit window solutions tailored to your taste and space.",
  ctaText = "Schedule Free Consultation",
  ctaHref = "#",
  extraText,
} = Astro.props;
---

<section class="hero" aria-labelledby="hero-title">
  <img
    class="hero__bg"
    src="/images/Hero.png"
    alt=""
    loading="eager"
    decoding="async"
  />

  <div class="hero__overlay" aria-hidden="true"></div>

  <div class="hero__content">
    <h1 id="hero-title" class="hero__title">{title}</h1>
    {subtitle && <p class="hero__subtitle">{subtitle}</p>}
    {extraText && <p class="hero__text">{extraText}</p>}
    {
      ctaText && (
        <a class="hero__cta" href={ctaHref}>
          {ctaText}
        </a>
      )
    }
  </div>
</section>

<style>
  /* Block */
  .hero {
    position: relative;
    min-height: 72svh;
    isolation: isolate;
    overflow: clip;

    /* Global tokens */
    color: var(--white);
    font-family: var(--ff-body, "Sora", sans-serif);
  }

  /* Elements */
  .hero__bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -2;
    transform: translateZ(0);
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    z-index: -1;

    /* Keep your gradient, works over photography */
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0.62) 0%,
      rgba(0, 0, 0, 0.45) 38%,
      rgba(0, 0, 0, 0.18) 58%,
      rgba(0, 0, 0, 0) 78%
    );
  }

  /* .hero__content {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 46rem;
    padding: clamp(1.5rem, 6vw, 6rem);
  } */
  .hero__content {
    position: absolute;
    top: 50%; 
    left: clamp(16px, 6vw, 120px); 
    transform: translateY(-50%); 

    display: flex;
    flex-direction: column;
    gap: 1rem;

    max-width: 46rem;
    margin: 0; /* kill the stray margin */
    padding: 0; /* keep it tight; gutter handled by `left` */
    padding-right: clamp(8px, 3vw, 24px); /* small breathing room from edge */
  }
  .hero__title {
    font-family: var(--ff-heading, "Baskervvville"), serif;
    font-weight: var(--fw-semibold, 600);
    line-height: 1.08;

    /* Tokenized sizes */
    font-size: var(--fs-h1, clamp(2rem, 5.4vw, 4rem));
    letter-spacing: 0.2px;
    color: var(--white);
  }

  .hero__subtitle {
    color: color-mix(in srgb, var(--white) 88%, transparent);
    font-size: var(--fs-body-l, 1.25rem);
    line-height: 1.5;
    max-width: 42rem;
    font-weight: var(--fw-medium, 500);
  }

  .hero__text {
    color: color-mix(in srgb, var(--white) 85%, transparent);
    font-size: var(--fs-body-r, 1rem);
    line-height: 1.6;
    max-width: 42rem;
    font-weight: var(--fw-regular, 400);
  }

  .hero__cta {
    align-self: start;

    /* Button palette from your tokens */
    background: var(--neutral-lightest, #f5f7f1);
    color: var(--primary, #282b30);

    padding: 0.9rem 1.2rem;
    border-radius: 0.2rem;
    font-weight: var(--fw-semibold, 600);
    text-decoration: none;

    transition:
      filter 0.2s ease,
      transform 0.02s ease-in;

    /* Respect body font unless you want it in heading font */
    font-family: var(--ff-body, "Sora", sans-serif);
    border: 1px solid
      color-mix(in srgb, var(--neutral-lighter) 65%, transparent);
  }

  .hero__cta:hover {
    filter: brightness(0.96);
  }

  .hero__cta:active {
    transform: translateY(1px);
  }

  /* Mobile adjustment using same gradient logic you had */
  @media (max-width: 768px) {
    .hero__overlay {
      background: linear-gradient(
        180deg,
        rgba(0, 0, 0, 0.62) 0%,
        rgba(0, 0, 0, 0.45) 35%,
        rgba(0, 0, 0, 0) 75%
      );
    }
    .hero__content {
      max-width: 70%;
    }
  }
</style>
