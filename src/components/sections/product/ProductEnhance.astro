---
import { getProductEnhance } from "../../../data/product-enhance";

export interface Props {
  slug: string;
}

const { slug } = Astro.props as Props;
const data = getProductEnhance(slug);
---

{
  data ? (
    <section class="product-enhance">
      <div class="product-enhance__container container">
        <div class="product-enhance__content">
          <h2>{data.title}</h2>
          <p class="bold">{data.subtitle}</p>
          <p>{data.description}</p>
        </div>
        <div class="product-enhance__media ">
          <picture>
            <source
              srcset={data.image.webp}
              type="image/webp"
              media="(max-width: 1023px)"
            />
            <source
              srcset={data.image.png}
              type="image/png"
              media="(max-width: 1023px)"
            />
            <img
              src={data.image.png}
              alt={data.image.alt}
              width={data.image.width}
              height={data.image.height}
              loading="eager"
              decoding="async"
            />
          </picture>
        </div>
      </div>
    </section>
  ) : null
}

<style>
  .product-enhance {
    background: var(--grey-10);
  }
  .product-enhance__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 48px;
  }
  .product-enhance__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;

    max-width: 1040px;
  }

  .product-enhance__content h2 {
    display: flex;
    flex-direction: column;
    padding-bottom: 16px;
  }

  .product-enhance__content h3 {
    font-weight: var(--fw-regular);
  }
  .product-enhance__content p.bold {
    padding-bottom: 8px;
    max-width: 900px;
    width: 100%;
  }

  .product-enhance__media img {
    width: 100%;
    height: auto;
    border-radius: 2px;
  }


</style>
