---
import Button from "../../ui/Button.astro";
---

<section class="product-hero">
  <div class="container product-hero__grid">
    <div class="product-hero__media">
      <picture>
        <source
          srcset="/images/product-hero.webp"
          type="image/webp"
          media="(max-width: 1023px)"
        />
        <source
          srcset="/images/product-hero.png"
          type="image/png"
          media="(max-width: 1023px)"
        />
        <img
          src="/images/product-hero.png"
          alt="Roman shade close-up by a window with plant"
          width="600"
          height="750"
          loading="eager"
          decoding="async"
        />
      </picture>
    </div>
    <div class="product-hero__right">
      <div class="product-hero__content">
        <div class="product-hero__header">
          <h2>Elegant Roman Shades Installed to Perfection</h2>
          <p>
            Bring timeless elegance to your space with custom Roman shades. Our
            expert installation ensures flawless fit, smooth operation, and
            style that perfectly complements your home’s décor and lifestyle.
          </p>
        </div>
        <div class="product-hero__specs">
          <h3 class="big-heading">Quick Specs</h3>
          <ul>
            <li>
              <img
                class="product-hero__specs-icon"
                src="../icons/bullet-point.svg"
                alt=""
                aria-hidden="true"
                width="12"
                height="12"
              />
              <p>
                <span class="product-hero__specs-term">Motorization:</span>
                Available
              </p>
            </li>
            <li>
              <img
                class="product-hero__specs-icon"
                src="../icons/bullet-point.svg"
                alt=""
                aria-hidden="true"
                width="12"
                height="12"
              />
              <p>
                <span class="product-hero__specs-term">Blackout Option:</span>
                Available
              </p>
            </li>
            <li>
              <img
                class="product-hero__specs-icon"
                src="../icons/bullet-point.svg"
                alt=""
                aria-hidden="true"
                width="12"
                height="12"
              />
              <span class="product-hero__specs-term">Cordless:</span>
              <span class="product-hero__specs-value">Available</span>
            </li>
            <li>
              <li>
                <img
                  class="product-hero__specs-icon"
                  src="../icons/bullet-point.svg"
                  alt=""
                  aria-hidden="true"
                  width="12"
                  height="12"
                />
                <span class="product-hero__specs-term">Custom Sizes:</span>
                <span class="product-hero__specs-value">Yes</span>
              </li>
              <li>
                <img
                  class="product-hero__specs-icon"
                  src="../icons/bullet-point.svg"
                  alt=""
                  aria-hidden="true"
                  width="12"
                  height="12"
                />
                <span class="product-hero__specs-term">Mount Types:</span>
                <span class="product-hero__specs-value">Inside / Outside</span>
              </li>
              <li>
                <img
                  class="product-hero__specs-icon"
                  src="../icons/bullet-point.svg"
                  alt=""
                  aria-hidden="true"
                  width="12"
                  height="12"
                />
                <span class="product-hero__specs-term">Control Options:</span>
                <span class="product-hero__specs-value"
                  >Corded, Cordless, Motorized</span
                >
              </li>
            </li>
          </ul>
        </div>
        <div class="product-hero__cta">
          <Button color="secondary" href="/contact">
            Schedule Free Consultation
          </Button>
        </div>
      </div>
    </div>
  </div>

  <style>
    .product-hero__grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 48px;
      align-items: center;
    }
    .product-hero__media {
      display: block;
      max-width: 100%;
      object-fit: cover;
    }

    .product-hero__media img {
      display: block;
      width: 100%;
      height: auto;
      object-fit: cover;
      border-radius: 2px;
    }
    .product-hero__right {
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: 32px;
    }

    .product-hero__content {
      display: flex;
      flex-direction: column;
      gap: 24px;
    }
    .product-hero__header {
      display: flex;
      flex-direction: column;
      gap: 16px;
    }

    .product-hero__specs {
      display: flex;
      flex-direction: column;
      gap: 16px;
    }

    .product-hero__specs ul {
      list-style: none;
      display: grid;
      gap: 12px;
    }

    .product-hero__specs li {
      display: flex;
      gap: 12px;
      align-items: center;
    }

    .product-hero__specs-term {
      font-weight: var(--fw-semibold);
    }

    @media (min-width: 768px) {
      .product-hero__media img {
        height: 690px;
      }
    }
    @media (min-width: 992px) {
      .product-hero__media img {
        height: 690px;
      }
      .product-hero__grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
  </style>
</section>
