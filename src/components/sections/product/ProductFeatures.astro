---
import Button from "../../ui/Button.astro";
import { getProductFeatures } from "../../../data/product-features";

export interface Props {
  slug: string;
}
const { slug } = Astro.props as Props;

const data = getProductFeatures(slug);
if (!data) {
  console.warn(
    `ProductFeatures: unknown slug "${slug}". Add it to product-features-data.ts`,
  );
}
---

{
  data ? (
    <section>
      <div class="product-features ">
        <div class="product-features__media">
          <picture>
            {data.image.webp && (
              <source
                srcset={data.image.webp}
                type="image/webp"
                media="(max-width: 1023px)"
              />
            )}
            <source
              srcset={data.image.png}
              type="image/png"
              media="(max-width: 1023px)"
            />
            <img
              src={data.image.png}
              alt={data.image.alt}
              width={data.image.width}
              height={data.image.height}
              loading="eager"
              decoding="async"
            />
          </picture>
        </div>

        <div class="product-features__right">
          <div class="product-features__content">
            <div class="product-features__header">
              <h2>{data.title}</h2>
              <p>{data.description}</p>
            </div>

            <div class="product-features__specs">
              <ul>
                {data.features.map((text) => (
                  <li>
                    <img
                      class="product-features__specs-icon"
                      src="/icons/bullet-point.svg"
                      alt=""
                      aria-hidden="true"
                      width="12"
                      height="12"
                    />
                    <p set:html={text} />
                  </li>
                ))}
              </ul>
            </div>

            <div class="product-features__cta">
              <Button color="secondary" href={data.cta.href}>
                {data.cta.label}
              </Button>
            </div>
          </div>
        </div>
      </div>
    </section>
  ) : (
    <section class="container" aria-live="polite">
      <p style="opacity:.7">
        Features content for "{slug}" isn't defined yet. Add it in{" "}
        <code>src/data/product-features-data.ts</code>.
      </p>
    </section>
  )
}

<style>
  .product-features {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .product-features__media {
    display: block;
    max-width: 100%;
    object-fit: cover;
  }
  .product-features__media img {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 2px;
  }
  .product-features__right {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 32px;
    min-width: 0;
  }
  .product-features__content {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  .product-features__header {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .product-features__specs {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .product-features__specs ul {
    list-style: none;
    display: grid;
    gap: 8px;
    margin: 0;
    padding: 0;
  }
  .product-features__specs li {
    display: flex;
    gap: 12px;
    align-items: center;
  }
  .product-features__specs-icon {
    flex-shrink: 0;
  }
  @media (min-width: 768px) {
    .product-features__media img {
      height: 500px;
    }
  }
  @media (min-width: 992px) {
    .product-features__media img {
      height: 560px;
    }
  }
  @media (min-width: 1200px) {
    .product-features {
      display: flex;
      flex-direction: row;
      gap: 64px;
    }
  }
</style>
