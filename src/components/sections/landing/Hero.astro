---
import Button from "../../ui/Button.astro";
---

<section class="lp-hero" aria-labelledby="hero-title">
  <img
    class="lp-hero__bg"
    src="/images/Hero.png"
    alt=""
    loading="eager"
    decoding="async"
  />

  <div class="lp-hero__overlay" aria-hidden="true"></div>

  <div class="container">
    <div class="lp-hero__content">
      <h1 id="hero-title" class="lp-hero__title">
        Beautiful Window Coverings Beautifully Crafted for You
      </h1>
      <p class="lp-hero__subtitle">
        Enhance your home or business with stylish, custom-fit window solutions
        tailored to your taste and space.
      </p>
      <div class="lp-hero__actions">
        <Button color="neutral" href="#"> Schedule Free Consultation </Button>
      </div>
    </div>
  </div>
</section>

<style>
  .lp-hero {
    position: relative;
    display: grid;
    align-items: center;
    min-height: clamp(520px, 100svh, 900px);
    isolation: isolate;
    color: var(--white);
    font-family: var(--ff-body);
  }

  .lp-hero__bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -2;
    transform: translateZ(0);
  }

  .lp-hero__overlay {
    --overlay: 40, 43, 48; /* #282B30 */
    position: absolute;
    inset: 0;
    z-index: -1;
    pointer-events: none;
    background: linear-gradient(
      90deg,
      rgba(var(--overlay), 0.96) 0%,
      rgba(var(--overlay), 0.86) 38%,
      rgba(var(--overlay), 0.64) 58%,
      rgba(var(--overlay), 0.38) 85%,
      rgba(var(--overlay), 0) 100%
    );
  }

  .lp-hero__content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 46rem;
    padding-block: clamp(16px, 6vw, 64px);
  }

  .lp-hero__title {
    font-family: var(--ff-heading);
    font-size: var(--fs-h1);
    font-weight: var(--fw-semibold);
    line-height: 1.08;
    letter-spacing: -0.02em;
    color: var(--white);
  }

  .lp-hero__subtitle {
    font-family: var(--ff-body);
    font-size: var(--fs-body-r); /* This is 16px */
    line-height: 1.5;
    font-weight: var(--fw-regular);
    max-width: 42rem;
    color: color-mix(in srgb, var(--white) 88%, transparent);
  }

  .lp-hero__actions {
    margin-top: 0.25rem;
  }

  @media (max-width: 768px) {
    .lp-hero__overlay {
      background: linear-gradient(
        90deg,
        rgba(var(--overlay), 0.96) 0%,
        rgba(var(--overlay), 0.86) 45%,
        rgba(var(--overlay), 0.5) 85%,
        rgba(var(--overlay), 0) 100%
      );
    }
    .lp-hero__content {
      max-width: 70%;
      padding-block: 24px 32px;
    }
  }
</style>
