---
import Button from "../../ui/Button.astro";

import { getCloudinarySrc } from "../../../config/cloudinary";

import { whyUsFeatures } from "../../../data/why-us-data";
const { leftFeatures, rightFeatures } = whyUsFeatures;

const whyUsImage = getCloudinarySrc("why-us_cr6tvu", "png", "v1761502424");
---

<section class="why-us" aria-labelledby="why-us-title">
  <div class="why-us__container container">
    <header class="why-us__header">
      <h2 id="why-us-title">Why Homeowners and Designers Choose Us</h2>
      <p>
        We combine expert knowledge, design-focused thinking, and family-level
        care to deliver window treatments that perform beautifully, last long,
        and perfectly suit your space and lifestyle.
      </p>
    </header>
    <div class="why-us__grid">
      <!-- Left stack -->
      <ul class="why-us__list">
        {
          leftFeatures.map((feature) => (
            <li class="why-us__card">
              <div class="why-us__card-header">
                <img
                  src={feature.icon}
                  alt={feature.alt || ""}
                  width="24"
                  height="24"
                  loading="lazy"
                />
                <h3 class="big-heading">{feature.title}</h3>
              </div>

              <p>{feature.text}</p>
            </li>
          ))
        }
      </ul>

      <!-- Center image -->
      <div class="why-us__media">
        <img
          src={whyUsImage}
          alt="Living room with custom window treatments"
          width="1025"
          height="933"
          loading="lazy"
          decoding="async"
        />
      </div>

      <!-- Right stack -->
      <ul class="why-us__list">
        {
          rightFeatures.map((feature) => (
            <li class="why-us__card">
              <div class="why-us__card-header">
                <img
                  class="why-us__card-icon"
                  src={feature.icon}
                  alt={feature.alt || ""}
                  width="24"
                  height="24"
                  loading="lazy"
                />
                <h3 class="big-heading">{feature.title}</h3>
              </div>
              <p>{feature.text}</p>
            </li>
          ))
        }
      </ul>
    </div>
    <div class="why-us__cta">
      <Button href="/about#about-meet" color="secondary"
        >See What Sets Us Apart</Button
      >
    </div>
  </div>
</section>

<style>
  .why-us {
    width: 100%;
  }

  .why-us__container {
    display: flex;
    flex-direction: column;
    gap: 48px;
    width: 100%;
  }
  .why-us__header {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    width: 100%;
    gap: 16px;
  }

  .why-us__grid {
    display: grid;
    grid-template-columns: 1fr;
    align-items: center;
    justify-content: center;
    width: 100%;
    gap: 16px;
  }

  .why-us__media {
    display: block;
    max-width: 100%;
  }

  .why-us__media img {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .why-us__list {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: 1fr;
    gap: 16px;
    width: 100%;
  }

  .why-us__card {
    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: center;
    flex: 1;
    gap: 8px;
    background: var(--grey-10);
    border-radius: 2px;
    padding: 24px;
    height: 100%;
  }
  .why-us__card-header {
    display: flex;
    align-items: center;
    gap: 8px;
    width: 100%;
  }

  .why-us__cta {
    text-align: center;
    width: 100%;
  }
  @media (min-width: 768px) {
    .why-us__media img {
      height: 500px;
      width: 100%;
      object-fit: cover;
      object-position: center 35%;
    }
  }

  @media (min-width: 820px) {
    .why-us__grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: auto auto;
      gap: 28px;
      align-items: stretch;
    }

    .why-us__media {
      grid-column: 1 / -1;
      grid-row: 1;
    }

    .why-us__list:first-of-type {
      grid-column: 1;
      grid-row: 2;
    }

    .why-us__list:last-of-type {
      grid-column: 2;
      grid-row: 2;
    }

    .why-us__media img {
      width: 100%;
      height: 550px;
      object-fit: cover;
      object-position: center 25%;
    }

    .why-us__list {
      gap: 28px;
    }
  }
  @media (min-width: 1250px) {
    .why-us__grid {
      display: grid;
      grid-template-columns: 1fr auto 1fr;
      align-items: start;
      justify-content: center;
      height: 600px;
      gap: 28px;
    }

    .why-us__list {
      display: flex;
      flex-direction: column;
      gap: 28px;
      height: 100%;
    }

    .why-us__list:first-of-type {
      grid-column: 1;
      grid-row: 1;
    }

    .why-us__media {
      grid-column: 2;
      grid-row: 1;
      align-self: start;
      width: 450px;
      height: 600px;
    }

    .why-us__list:last-of-type {
      grid-column: 3;
      grid-row: 1;
    }

    .why-us__media img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }
  }
</style>
