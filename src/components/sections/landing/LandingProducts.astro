---
import Button from "../../ui/Button.astro";

export interface CategoryCard {
  title: string;
  image: string;
  alt: string;
  href: string;
  blurb?: string;
}

type Props = {
  heading?: string;
  subheading?: string;
  items: CategoryCard[];
  /** which card starts with the overlay text visible (0-based) */
  activeIndex?: number; // -1 = none open
};

const {
  heading = "Custom Window Coverings for Every Space",
  subheading = "",
  items,
  activeIndex = -1,
} = Astro.props as Props;
---

<section class="lp-products" aria-labelledby="lp-products-title">
  <div class="container">
    <header class="lp-products__header">
      <h2 id="lp-products-title" class="lp-products__title">
        {heading}
      </h2>
      {subheading && <p class="lp-products__sub">{subheading}</p>}
    </header>

    <ul class="lp-products__grid" role="list">
      {
        items.map((it, i) => (
          <li class="lp-products__item">
            <a
              class={`card${i === activeIndex ? " is-active" : ""}`}
              href={it.href}
              aria-label={`${it.title}${it.blurb ? ": " + it.blurb : ""}`}
            >
              <figure class="lp-products-card__media">
                <img
                  src={it.image}
                  alt={it.alt}
                  width="408"
                  height="480"
                  loading={i === 0 ? "eager" : "lazy"}
                  decoding="async"
                />
              </figure>

              <div class="lp-products-card__overlay">
                <h3 class="lp-products-card__title">{it.title}</h3>
                {it.blurb && <p class="lp-products-card__blurb">{it.blurb}</p>}
              </div>
            </a>
          </li>
        ))
      }
    </ul>

    <div class="lp-products__cta">
      <Button color="secondary" href="/products">Explore All Products</Button>
    </div>
  </div>
</section>

<style>
  /* Base */
  .lp-products {
    padding: 16px;
    background: var(--grey-10);
  }

  .lp-products__header {
    display: grid;
    grid-template-columns: 1fr; /* stacked by default */
    gap: 20px;
    align-items: start;
    margin-bottom: 40px;
  }

  .lp-products__title {
    margin: 0;
  }

  .lp-products__sub {
    margin: 6px 0 0;
    color: var(--text);
    font-family: var(--ff-body);
    font-size: var(--fs-body-l);
    line-height: 1.6;
    max-width: 56ch;
  }

  /* Grid (refined in MQs) */
  .lp-products__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 28px; /* your spec */
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .lp-products__item {
    list-style: none;
  }

  .card {
    position: relative;
    display: block;
    overflow: hidden;
    border-radius: 4px;
    background: var(--grey-50);
    width: 100%;
    margin-inline: auto;
  }

  /* Default ratio (desktop/tablet); mobile overrides below */
  .lp-products-card__media {
    aspect-ratio: 17 / 20;
  } /* 408 × 480 */

  .lp-products-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Overlay */
  .lp-products-card__overlay {
    position: absolute;
    inset: 0;
    display: grid;
    align-content: end;
    padding: 14px;
    color: var(--white);
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 40%,
      rgba(0, 0, 0, 0.55) 100%
    );
    transition:
      background 0.2s ease,
      opacity 0.22s ease,
      transform 0.22s ease;
  }

  .lp-products-card__title {
    margin: 0;
    font-family: var(--ff-heading);
    font-size: var(--fs-h3-lg);
    font-weight: var(--fw-bold);
    color: var(--white);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.35);
    line-height: 1.2;
  }

  .lp-products-card__blurb {
    margin: 6px 0 0;
    font-family: var(--ff-body);
    font-size: var(--fs-body-s);
    line-height: 1.4;
    max-width: 38ch;
    color: var(--white);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.35);
    opacity: 0;
    max-height: 0;
    transform: translateY(6px);
    transition:
      opacity 0.25s ease,
      transform 0.25s ease,
      max-height 0.25s ease;
  }

  .card.is-active .lp-products-card__blurb,
  .card:hover .lp-products-card__blurb,
  .card:focus-visible .lp-products-card__blurb {
    opacity: 1;
    max-height: 220px;
    transform: translateY(0);
  }

  .card:hover .lp-products-card__overlay,
  .card:focus-visible .lp-products-card__overlay,
  .card.is-active .lp-products-card__overlay {
    background:
      linear-gradient(
        360deg,
        rgba(26, 26, 26, 0.76) 13.1%,
        rgba(26, 26, 26, 0) 64.22%
      ),
      linear-gradient(to bottom, rgba(0, 0, 0, 0) 40%, rgba(0, 0, 0, 0.55) 100%);
  }

  .lp-products__cta {
    display: flex;
    justify-content: center;
    margin-top: 40px;
  }

  /* =========================
     MEDIA QUERIES (BOTTOM)
     ========================= */

  /* Phones: exact 343 × 360 visual box */
  @media (max-width: 560px) {
    .lp-products__sub {
      font-size: var(--fs-body-s);
      line-height: 1.55;
      max-width: none;
    }

    .lp-products__grid {
      grid-template-columns: 1fr;
    }

    .card {
      max-width: 343px;
    } /* visual width */
    .lp-products-card__media {
      aspect-ratio: 343 / 360;
    } /* 343 × 360 */
  }

  /* Tablets: 2 columns */
  @media (min-width: 561px) and (max-width: 899.98px) {
    .lp-products__header {
      grid-template-columns: 1fr;
    }
    .lp-products__grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
    .card {
      max-width: 100%;
    }
    .lp-products-card__media {
      aspect-ratio: 17 / 20;
    }
  }

  /* Desktop: FORCE 3 columns, let cards shrink to fit (no overflow) */
  @media (min-width: 900px) {
    .lp-products {
      padding: 32px;
    }
    .lp-products__header {
      grid-template-columns: 1fr 1fr;
      margin-bottom: 40px;
    }
    .lp-products__grid {
      grid-template-columns: repeat(3, minmax(0, 1fr)); /* always 3 columns */
      gap: 28px;
    }
    .card {
      max-width: 100%;
    } /* no fixed 408px width */
    .lp-products-card__media {
      aspect-ratio: 17 / 20;
    }
  }

  /* Motion-safe */
  @media (prefers-reduced-motion: reduce) {
    .lp-products-card__blurb,
    .lp-products-card__overlay {
      transition: none;
    }
  }
</style>
