---
import Button from "../../ui/Button.astro";

export interface CategoryCard {
  title: string;
  image: string;
  alt: string;
  href: string;
  blurb?: string;
}

type Props = {
  heading?: string;
  subheading?: string;
  items: CategoryCard[];
  /** which card starts with the overlay text visible (0-based) */
  activeIndex?: number; // -1 = none open
};

const {
  heading = "Custom Window Coverings for Every Space",
  subheading = "",
  items,
  activeIndex = -1,
} = Astro.props as Props;
---

<section class="lp-products" aria-labelledby="lp-products-title">
  <div class="container">
    <header class="lp-products__header">
      <h2 id="lp-products-title" class="lp-products__title">
        {heading}
      </h2>
      {subheading && <p class="lp-products__sub">{subheading}</p>}
    </header>

    <ul class="lp-products__grid" role="list">
      {
        items.map((it, i) => (
          <li class="lp-products__item">
            <a
              class={`card${i === activeIndex ? " is-active" : ""}`}
              href={it.href}
              aria-label={`${it.title}${it.blurb ? ": " + it.blurb : ""}`}
            >
              <figure class="lp-products-card__media">
                <img
                  src={it.image}
                  alt={it.alt}
                  width="408"
                  height="480"
                  loading={i === 0 ? "eager" : "lazy"}
                  decoding="async"
                />
              </figure>

              <div class="lp-products-card__overlay">
                <h3 class="lp-products-card__title">{it.title}</h3>
                {it.blurb && <p class="lp-products-card__blurb">{it.blurb}</p>}
              </div>
            </a>
          </li>
        ))
      }
    </ul>

    <div class="lp-products__cta">
      <Button color="secondary" href="/products">Explore All Products</Button>
    </div>
  </div>
</section>

<style>
  /* Section padding to spec (uses your global variables for colors/fonts) */
  .lp-products {
    padding: 16px;
    background: var(--white);
  }
  @media (min-width: 900px) {
    .lp-products {
      padding: 32px;
    }
  }

  /* Header: 2 cols desktop, stacked on mobile */
  .lp-products__header {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    align-items: start;
    margin-bottom: 50px;
  }
  .lp-products__title {
    margin: 0;
  }
  .lp-products__sub {
    margin: 6px 0 0;
    color: var(--text);
    font-family: var(--ff-body);
    font-size: var(--fs-body-l);
    line-height: 1.6;
    max-width: 56ch;
  }

  /* Grid (keep your 3/2/1 layout) + exact 10px gap */
  .lp-products__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 10px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  /* Items */
  .lp-products__item {
    list-style: none;
  }

  /* Card base (anchor) */
  .card {
    position: relative;
    display: block;
    overflow: hidden;
    border-radius: 4px;
    background: var(--grey-50);
    margin-inline: auto; /* centers fixed-width card inside 1fr grid cells */
  }

  /* === IMAGE BOX SIZES TO SPEC ===
     Desktop: 408×480 → ratio 17:20
     Mobile:  343×360 → ratio 343:360
  */
  .lp-products-card__media {
    aspect-ratio: 17 / 20;
  } /* default/tablet/desktop ratio */

  /* Make sure the image fills the box cleanly */
  .lp-products-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Overlay */
  .lp-products-card__overlay {
    position: absolute;
    inset: 0;
    display: grid;
    align-content: end;
    padding: 14px;
    color: var(--white);
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 40%,
      rgba(0, 0, 0, 0.55) 100%
    );
    transition:
      background 0.2s ease,
      opacity 0.22s ease,
      transform 0.22s ease;
  }

  /* Title + blurb use your global tokens */
  .lp-products-card__title {
    margin: 0;
    font-family: var(--ff-heading);
    font-size: var(--fs-h3-lg);
    font-weight: var(--fw-bold);
    color: var(--white);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.35);
    line-height: 1.2;
  }
  .lp-products-card__blurb {
    margin: 6px 0 0;
    font-family: var(--ff-body);
    font-size: var(--fs-body-s);
    line-height: 1.4;
    max-width: 38ch;
    color: var(--white);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.35);

    opacity: 0;
    max-height: 0;
    transform: translateY(6px);
    transition:
      opacity 0.25s ease,
      transform 0.25s ease,
      max-height 0.25s ease;
  }

  /* Hover/focus/active reveal (unchanged) */
  .card.is-active .lp-products-card__blurb,
  .card:hover .lp-products-card__blurb,
  .card:focus-visible .lp-products-card__blurb {
    opacity: 1;
    max-height: 220px;
    transform: translateY(0);
  }
  .card:hover .lp-products-card__overlay,
  .card:focus-visible .lp-products-card__overlay,
  .card.is-active .lp-products-card__overlay {
    background:
      linear-gradient(
        360deg,
        rgba(26, 26, 26, 0.76) 13.1%,
        rgba(26, 26, 26, 0) 64.22%
      ),
      linear-gradient(to bottom, rgba(0, 0, 0, 0) 40%, rgba(0, 0, 0, 0.55) 100%);
  }

  .lp-products__cta {
    display: flex;
    justify-content: center;
    margin-top: 40px;
  }

  /* ===== Responsive tweaks ===== */
  @media (max-width: 560px) {
    .lp-products__header {
      grid-template-columns: 1fr;
      gap: 8px;
    }
    .lp-products__sub {
      font-size: var(--fs-body-s);
      line-height: 1.55;
      max-width: none;
    }

    .lp-products__grid {
      grid-template-columns: 1fr;
    }

    /* Mobile: lock card width and ratio to spec */
    .card {
      width: 343px;
    }
    .lp-products-card__media {
      aspect-ratio: 343 / 360;
    }

    /* If you keep overlay more visible on touch, keep this */
    .lp-products-card__overlay {
      background: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 35%,
        rgba(0, 0, 0, 0.65) 100%
      );
      opacity: 1;
      transform: none;
      padding: 12px;
    }
    .lp-products-card__blurb {
      opacity: 1;
      max-height: none;
      transform: none;
      font-size: var(--fs-body-s);
      line-height: 1.45;
      margin-top: 4px;
    }
  }

  /* Tablet: keep 2 columns */
  @media (min-width: 561px) and (max-width: 899.98px) {
    .lp-products__header {
      grid-template-columns: 1fr;
    }
    .lp-products__grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .card {
      width: auto;
    } /* let cards flex within the 2-column grid */
  }

  /* Desktop: 3 columns, exact 408px card width + 17:20 ratio */
  @media (min-width: 900px) {
    .lp-products__header {
      margin-bottom: 40px;
    }
    .card {
      width: 408px;
    }
    .lp-products-card__media {
      aspect-ratio: 17 / 20;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .lp-products-card__blurb,
    .lp-products-card__overlay {
      transition: none;
    }
  }
</style>
