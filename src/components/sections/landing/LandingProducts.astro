---
import Button from "../../ui/Button.astro";

export interface CategoryCard {
  title: string;
  image: string;
  alt: string;
  href: string;
  blurb?: string;
}

type Props = {
  heading?: string;
  subheading?: string;
  items: CategoryCard[];
  /** which card starts with the overlay text visible (0-based) */
  activeIndex?: number; // -1 = none open
};

const {
  heading = "Custom Window Coverings for Every Space",
  subheading = "",
  items,
  activeIndex = -1,
} = Astro.props as Props;
---

<section class="lp__products__cats" aria-labelledby="lp__products__cats-title">
  <div class="container">
    <header class="lp__products__cats__header">
      <h2 id="lp__products__cats-title" class="lp__products__cats__title">
        {heading}
      </h2>
      {subheading && <p class="lp__products__cats__sub">{subheading}</p>}
    </header>

    <ul class="lp__products__cats__grid" role="list">
      {
        items.map((it, i) => (
          <li class="lp__products__cats__item">
            <a
              class={`card${i === activeIndex ? " is-active" : ""}`}
              href={it.href}
              aria-label={`${it.title}${it.blurb ? ": " + it.blurb : ""}`}
            >
              <figure class="card__media">
                <img
                  src={it.image}
                  alt={it.alt}
                  width="900"
                  height="600"
                  loading={i === 0 ? "eager" : "lazy"}
                  decoding="async"
                />
              </figure>

              <div class="card__overlay">
                <h3 class="card__title">{it.title}</h3>
                {it.blurb && <p class="card__blurb">{it.blurb}</p>}
              </div>
            </a>
          </li>
        ))
      }
    </ul>

    <div class="lp__products__cats__cta">
      <Button color="primary" href="/products">Explore All Products</Button>
    </div>
  </div>
</section>

<style>

  /* Header: stacked by default; split at larger screens */
  .lp__products__cats__header {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
    align-items: start;
    margin-bottom: 40px;
  }
  @media (min-width: 900px) {
    .lp__products__cats__header {
      grid-template-columns: 1fr 1fr;
      gap: 20px;
      margin-bottom: 50px;
    }
  }

  .lp__products__cats__title {
    margin: 0;
  }

  .lp__products__cats__sub {
    margin: 6px 0 0;
    color: var(--text);
    font-family: var(--ff-body);
    font-size: var(--fs-body-l);
    line-height: 1.6;
    max-width: 56ch;
  }

  /* Grid â€” mobile-first */
  .lp__products__cats__grid {
    display: grid;
    grid-template-columns: 1fr; /* mobile: one column */
    gap: 16px; /* mobile spacing requirement */
    list-style: none;
    padding: 0;
    margin: 0;
  }
  @media (min-width: 561px) {
    .lp__products__cats__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (min-width: 900px) {
    .lp__products__cats__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  @media (min-width: 1200px) {
    .lp__products__cats__grid {
      gap: 28px;
    } /* desktop spacing requirement */
  }

  .card {
    position: relative;
    display: block;
    overflow: hidden;
    border-radius: 2px;
    background: var(--grey-50); /* fallback while image loads */
  }

  .card__media {
    aspect-ratio: 4 / 3;
  }
  .card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Overlay */
  .card__overlay {
    position: absolute;
    inset: 0;
    display: grid;
    align-content: end;
    padding: 14px;
    color: var(--white);
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 40%,
      rgba(0, 0, 0, 0.55) 100%
    );
    transition:
      background 0.2s ease,
      opacity 0.22s ease,
      transform 0.22s ease;
  }

  .card__title {
    margin: 0;
    font-family: var(--ff-heading);
    font-size: var(--fs-h3-sm);
    font-weight: var(--fw-bold);
    color: var(--white);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.35);
    line-height: 1.2;
  }

  .card__blurb {
    margin: 6px 0 0;
    font-family: var(--ff-body);
    font-size: var(--fs-body-s);
    line-height: 1.4;
    max-width: 38ch;
    color: var(--white); /* same color/opacity as title */
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.35);

    opacity: 0;
    max-height: 0;
    transform: translateY(6px);
    transition:
      opacity 0.25s ease,
      transform 0.25s ease,
      max-height 0.25s ease;
  }

  .card.is-active .card__blurb,
  .card:hover .card__blurb,
  .card:focus-visible .card__blurb {
    opacity: 1;
    max-height: 220px;
    transform: translateY(0);
  }

  .card:hover .card__overlay,
  .card:focus-visible .card__overlay,
  .card.is-active .card__overlay {
    background:
      linear-gradient(
        360deg,
        rgba(26, 26, 26, 0.76) 13.1%,
        rgba(26, 26, 26, 0) 64.22%
      ),
      linear-gradient(to bottom, rgba(0, 0, 0, 0) 40%, rgba(0, 0, 0, 0.55) 100%);
  }

  .lp__products__cats__cta {
    display: flex;
    justify-content: center;
    margin-top: 40px;
  }

  /* Mobile-specific tweaks */
  @media (max-width: 560px) {
    .lp__products__cats__sub {
      font-size: var(--fs-body-s);
      line-height: 1.55;
      max-width: none;
    }
    /* Optional: taller media look on phones */
    .card__media {
      aspect-ratio: 16 / 10;
    }

    /* If you want overlay copy always visible on touch devices, keep this: */
    .card__overlay {
      background: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 35%,
        rgba(0, 0, 0, 0.65) 100%
      );
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .card__blurb,
    .card__overlay {
      transition: none;
    }
  }
</style>
