---
import { lpServicesData } from "../../../data/lp-services-data";
---

<section class="lp-services container">
  <div class="lp-services__header">
    <h2>Full-Service Window Treatment Solutions</h2>
    <p>
      From your first consultation to the final installation, our team provides
      full-service care with expert guidance, quality materials, and seamless
      results tailored to your residential or commercial space.
    </p>
  </div>
  <div class="lp-services__cards">
    {
      lpServicesData.map((card) => (
        <div class="lp-services__card">
          <img
            src={card.imgSrc}
            alt={card.imgAlt}
            class="lp-services__card-img"
            width="360"
            height="343"
          />
          <div class="lp-services__card-content">
            <div class="lep-services__card-header">
              <h3 class="lp-services__card-title big-heading">{card.title}</h3>
              <img
                src="/icons/up-arrow.svg"
                alt="Envelope Icon in White"
                width="14"
                height="14"
              />
            </div>
            <p class="lp-services__card-desc">{card.desc}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>
