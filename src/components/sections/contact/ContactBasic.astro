---
import ContactForm from "../../ui/ContactForm.astro";

import { getCloudinarySrc } from "../../../config/cloudinary";

const contactBasicImg = getCloudinarySrc(
  "layered-1-crop_b1rlfh",
  "png",
  "v1761595357",
);
---

<section class="contact-basic">
  <div class="contact-basic__container container">
    <div class="contact-basic__img">
      <img
        src={contactBasicImg}
        alt="layered shades in tall living room windows"
        width="707"
        height="774"
        loading="eager"
        decoding="async"
      />
    </div>

    <div class="contact-basic__form">
      <ContactForm />
    </div>
  </div>
</section>

<style>
  .contact-basic__container {
    display: flex;
    flex-direction: column;
    gap: 48px;
  }
  .contact-basic__img {
    display: block;
    max-width: 100%;
  }

  .contact-basic__img img {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  @media (min-width: 768px) {
    .contact-basic__img img {
      height: 500px;
      object-position: center 30%;
    }
  }
  @media (min-width: 1024px) {
    .contact-basic__container {
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: 64px;
    }

    .contact-basic__img img {
      height: 700px;
      object-position: center;
    }
  }

  @media (min-width: 1200px) {
    .contact-basic__img img {
      height: 680px;
      object-position: center;
    }
  }
</style>
