---
import ContentBlock from "../../ui/ContentBlock.astro";
---

<section class="services-design" aria-labelledby="services-design-title">
  <div class="services-design__container container" id="design-estimate">
    <div class="services-design__left">
      <div class="services-design__image-container">
        <img src="/images/temp1.png" alt="temp image" />
      </div>
    </div>
    <div class="services-design__right">
      <ContentBlock
        title="Start with a Free Estimate, End with a Beautiful Plan"
        introText="We make it easy to get started. Every project begins with a free estimate and expert guidance tailored to your home or business."
        description="Once you’re ready to move forward, our design consultation helps you plan every detail — from layout and function to the perfect window treatments for your space."
        cta={{
          text: "Schedule a Free Estimate",
          href: "/contact#contact-form",
          color: "secondary",
        }}
        id="services-design-title"
      />
    </div>
  </div>
</section>

<style>
  .services-design__container {
    display: flex;
    flex-direction: column;
    gap: 48px;
  }

  .services-design__image-container {
    display: block;
    max-width: 100%;
  }

  .services-design__image-container img {
    display: block;
    width: 100%;
    height: 300px;
    object-fit: cover;
  }

  /* --- Media Queries  --- */

  @media (min-width: 768px) {
    .services-design__image-container img {
      display: block;
      width: 100%;
      height: auto;
      object-fit: cover;
    }
  }

  @media (min-width: 1024px) {
    .services-design__container {
      flex-direction: row;
      align-items: center;
      gap: 64px;
    }

    .services-design__left {
      width: 50%;
    }

    .services-design__right {
      width: 50%;
    }
    .services-design__image-container {
      display: block;
      max-width: 100%;
      height: 500px;
      overflow: hidden;
    }

    .services-design__image-container img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }
  }
  @media (min-width: 1200px) {
    .services-design__image-container {
      display: block;
      max-width: 100%;
      height: 675px;
      overflow: hidden;
    }
  }
</style>
