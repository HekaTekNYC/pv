---
export interface CategoryCard {
  title: string;
  image: string;
  alt: string;
  href: string;
  blurb?: string;
}

type Props = {
  heading?: string;
  subheading?: string;
  items: CategoryCard[];
  /** which card starts with the overlay text visible (0-based) */
  activeIndex?: number; // -1 = none open
};

const {
  heading = "Custom Window Coverings for Every Space",
  subheading = "",
  items,
  activeIndex = -1,
} = Astro.props as Props;
---

<section class="cats" aria-labelledby="cats-title">
  <header class="cats__header">
    <h2 id="cats-title" class="cats__title">{heading}</h2>
    {subheading && <p class="cats__sub">{subheading}</p>}
  </header>

  <ul class="cats__grid" role="list">
    {
      items.map((it, i) => (
        <li class="cats__item">
          <a
            class={`card${i === activeIndex ? " is-active" : ""}`}
            href={it.href}
            aria-label={`${it.title}${it.blurb ? ": " + it.blurb : ""}`}
          >
            <figure class="card__media">
              <img
                src={it.image}
                alt={it.alt}
                width="900"
                height="600"
                loading={i === 0 ? "eager" : "lazy"}
                decoding="async"
              />
            </figure>

            <div class="card__overlay">
              <h3 class="card__title">{it.title}</h3>
              {it.blurb && <p class="card__blurb">{it.blurb}</p>}
            </div>
          </a>
        </li>
      ))
    }
  </ul>

  <div class="cats__cta">
    <a class="btn btn--primary" href="/products">Explore All Products</a>
  </div>
</section>

<style>
  :root {
    --gap: 1.25rem;
    --radius: 4px;
    --ink: #0f172a;
    --muted: #475569;
  }

  .cats {
    max-width: 1200px;
    margin: 0 auto;
    padding: 48px 16px;
  }

  /* Header: two columns on desktop, stack on mobile */
  .cats__header {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--gap);
    align-items: start;
    margin-bottom: 16px;
  }

  /* Responsive title (exact wording passed in from page) */
  .cats__title {
    font-family: var(--ff-heading, "Baskervville"), serif;
    font-weight: 600;
    font-size: clamp(32px, 6vw, 64px);
    line-height: 1.05;
    letter-spacing: -0.01em;
    margin: 0;
    color: var(--ink);
    text-wrap: balance;
  }

  .cats__sub {
    margin: 6px 0 0;
    color: var(--muted);
    font-size: clamp(16px, 1.5vw, 18px);
    line-height: 1.6;
    max-width: 56ch;
  }

  /* Grid of cards */
  .cats__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--gap);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .card {
    position: relative;
    display: block;
    overflow: hidden;
    border-radius: var(--radius);
    background: #111;
  }

  .card__media {
    aspect-ratio: 4 / 3;
  }

  .card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Base overlay: bottom fade for text readability */
  .card__overlay {
    position: absolute;
    inset: 0;
    display: grid;
    align-content: end;
    padding: 14px;
    color: #fff;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 40%,
      rgba(0, 0, 0, 0.55) 100%
    );
    transition: background 0.2s ease;
  }

  /* Hover/active overlay: stack requested top gradient + existing bottom fade */
  .card:hover .card__overlay,
  .card:focus-visible .card__overlay,
  .card.is-active .card__overlay {
    background:
      linear-gradient(
        360deg,
        rgba(26, 26, 26, 0.76) 13.1%,
        rgba(26, 26, 26, 0) 64.22%
      ),
      linear-gradient(to bottom, rgba(0, 0, 0, 0) 40%, rgba(0, 0, 0, 0.55) 100%);
  }

  .card__title {
    margin: 0;
    font-size: 18px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.35);
  }

  .card__blurb {
    margin: 6px 0 0;
    font-size: 14px;
    line-height: 1.4;
    max-width: 38ch;
    opacity: 0;
    max-height: 0;
    transform: translateY(6px);
    transition:
      opacity 0.25s ease,
      transform 0.25s ease,
      max-height 0.25s ease;
  }

  /* Reveal blurb on hover/focus or if pre-activated */
  .card.is-active .card__blurb,
  .card:hover .card__blurb,
  .card:focus-visible .card__blurb {
    opacity: 1;
    max-height: 220px;
    transform: translateY(0);
  }

  .cats__cta {
    display: flex;
    justify-content: center;
    margin-top: 18px;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.65rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    background: #1f2937;
    color: #fff;
    border: 1px solid #1f2937;
  }
  .btn:hover {
    background: #111827;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .cats__header {
      grid-template-columns: 1fr;
    }
    .cats__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 560px) {
    .cats__grid {
      grid-template-columns: 1fr;
    }
  }
  /* Touch: avoid hover traps by hiding non-active blurbs */
  @media (max-width: 560px) and (hover: none) and (pointer: coarse) {
    .card:not(.is-active) .card__blurb {
      display: none;
    }
  }
  @media (prefers-reduced-motion: reduce) {
    .card__blurb {
      transition: none;
    }
  }
</style>
