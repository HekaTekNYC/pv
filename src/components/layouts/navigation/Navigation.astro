---
import Dropdown from "./Dropdown";
import Button from "../../ui/Button.astro";
import { productItems } from "../../../data/navLinks";
---

<nav class="nav-bar">
  <div class="nav-bar__container">
    <a href="/" class="nav-bar__logo" aria-label="Home">
      <img src="/images/PVLogo.png" alt="" height="48px" width="117px" />
      <!-- <picture> <source srcset="/images/epic-drk.webp" type="image/webp" /> <source srcset="/images/epic-drk.png" type="image/png" /> <img src="/images/epic-drk.png" alt="Epic Tails logo" height="50" width="100" /> </picture> -->
    </a>

    <button class="nav-bar__hamburger" aria-label="Toggle navigation">
      <img src="/icons/hamburger.svg" alt="hamburger icon" />
    </button>

    <div class="nav-bar__links">
      <ul>
        <li><a href="/" class="nav-bar__link">Home</a></li>
        <Dropdown item={productItems} client:load />
        <li><a href="/services" class="nav-bar__link">Services</a></li>
        <li><a href="/about" class="nav-bar__link">About</a></li>
        <li><a href="/projects" class="nav-bar__link">Projects</a></li>
        <li><a href="/contact" class="nav-bar__link">Contact</a></li>
        <li class="nav-bar__book-now">
          <Button href="/contact" color="primary" bordered variant="nav"
            >Get a Free Quote</Button
          >
        </li>
      </ul>
    </div>
  </div>
</nav>

<style>
  nav {
    position: sticky;
    top: 0;
    background-color: var(--primary);
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 35px;
    height: 72px;
    width: 100%;
    z-index: 1000;
  }

  .nav-bar__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1300px;
    height: 100%;
  }

  .nav-bar__logo {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }

  .nav-bar__hamburger {
    height: 35px;
    width: 35px;
    cursor: pointer;
    background: none;
    border: none;
    padding: 0;
  }

  /* Mobile nav */
  .nav-bar__links {
    position: absolute;
    top: 72px;
    left: 0;
    width: 100%;
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    background-color: var(--primary);
    padding: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    transition:
      max-height 0.4s ease,
      opacity 0.4s ease,
      padding 0.3s ease;
  }

  .nav-bar__links.active {
    max-height: calc(100vh - 72px);
    opacity: 1;
    padding: 40px 0;
    overflow-y: auto;
  }

  .nav-bar__links ul {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    gap: 20px;
    width: 100%;
    margin-bottom: 10px;
  }

  .nav-bar__links li {
    width: 100%;
    text-align: center;
  }

  .nav-bar__links a {
    font-size: 1.3rem;
    font-weight: 500;
    color: var(--white);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 10px 0;
  }

  .nav-bar__links a:hover {
    color: var(--neutral);
  }

  .nav-bar__book-now {
    margin-top: auto;
    padding: 20px 0;
  }

  .nav-bar__caret {
    width: 10.54px;
    height: 6.25px;
    transition: transform 0.2s ease;
  }

  @media (min-width: 576px) {
    .nav {
      padding: 0 40px;
    }
  }

  /* Desktop */
  @media (min-width: 992px) {
    nav {
      padding: 0 80px;
      height: 104px;
    }

    .nav-bar__hamburger {
      display: none;
    }

    .nav-bar__links {
      position: static;
      max-height: none;
      opacity: 1;
      flex-direction: row;
      justify-content: flex-end;
      align-items: center;
      width: auto;
      padding: 0;
      overflow: visible;
    }

    .nav-bar__links a {
      font-size: 1rem;
    }

    .nav-bar__links ul {
      flex-direction: row;
      margin-bottom: 0;
    }

    .nav-bar__book-now {
      margin-top: 0;
    }
  }

  @media (min-width: 1200px) {
    nav {
      padding: 0 100px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const hamburger = document.querySelector(".nav-bar__hamburger");
    const navLinks = document.querySelector(".nav-bar__links");

    if (!hamburger || !navLinks) return;

    // Hamburger toggle
    hamburger.addEventListener("click", (e) => {
      e.stopPropagation();
      navLinks.classList.toggle("active");
    });

    // Close when clicking outside
    document.addEventListener("click", (e) => {
      if (
        navLinks.classList.contains("active") &&
        !navLinks.contains(e.target as Node) &&
        !hamburger.contains(e.target as Node)
      ) {
        navLinks.classList.remove("active");
      }
    });
  });
</script>
