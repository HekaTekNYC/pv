---
interface Props {
  color?: "primary" | "secondary" | "accent" | "white" | "nav";
  href?: string;
  type?: "button" | "submit" | "reset";
  bordered?: boolean;
  variant?: "default" | "nav";
}

const {
  color = "primary",
  href = "",
  type = "button",
  bordered = false,
} = Astro.props;

const colorClass = {
  primary: "btn-primary",
  secondary: "btn-secondary",
  accent: "btn-accent",
  white: "btn-white",
  nav: "btn-nav",
}[color];

const borderClass = bordered ? "btn-bordered" : "";
---

{
  href ? (
    <a href={href} class={`btn ${colorClass} ${borderClass}`}>
      <slot />
    </a>
  ) : (
    <button type={type} class={`btn ${colorClass} ${borderClass}`}>
      <slot />
    </button>
  )
}

<style>
  .btn {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: 16px 40px;
    font-family: var(--ff-body);
    font-weight: var(--fw-bold);
    line-height: 100%;
    letter-spacing: 0%;
    gap: 4px;
    cursor: pointer;
    border: none;
    border-radius: 4px;
    text-decoration: none;
    box-sizing: border-box;
    opacity: 1;
    flex-shrink: 0;
    min-height: 46px;
    transition:
      background-color 0.2s ease,
      color 0.2s ease;
    white-space: nowrap;
  }

  .btn-nav {
    padding: 16px 28px !important;
  }

  .btn-primary {
    background-color: var(--primary);
    color: var(--white);
  }

  .btn-secondary {
    background-color: var(--secondary);
    color: var(--white);
  }

  .btn-neutral {
    background-color: var(--neutral-lighter);
    color: var(--primary);
  }
  .btn-nav {
    background-color: var(--white);
    color: var(--primary);
  }

  .btn-nav:hover {
    background-color: var(--neutral-lightest);
  }

  .btn-bordered {
    border: 1px solid var(--grey-50);
  }

  @media (min-width: 992px) {
    .btn-nav {
      background-color: var(--primary);
      color: var(--white);
    }

    .btn-nav:hover {
      background-color: var(--secondary);
    }
  }
</style>
