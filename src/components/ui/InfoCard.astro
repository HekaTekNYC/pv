---
interface InfoCardProps {
  headerClass?: string;
  icon?: string;
  alt: string;
  title: string;
  text: string;
}

const { headerClass = "", icon = "", alt, title, text } = Astro.props;
---

<div class="info-card">
  <div class="info-card__header">
    <div class="info-card__icon">
      <img src={icon} alt={alt} height="20px" width="20px" />
    </div>
    <h3 class={`info-card__title ${headerClass}`}>
      {title}
    </h3>
  </div>
  <p class="roboto-text">
    {text}
  </p>
</div>

<style>
  .info-card {
    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: start;
    flex: 1 1 230px;
    padding: 24px;
    gap: 12px;
    background-color: var(--grey-10);

    max-width: 300px;
  }

  .info-card__header {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  @media (min-width: 1024px) {
    .info-card {
      padding: 20px;
    }
  }
  @media (min-width: 1200px) {
    .info-card {
      padding: 24px;
    }
  }
</style>
