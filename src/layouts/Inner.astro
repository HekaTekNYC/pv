---
import Main from "./Main.astro";
import PageHeader from "../components/sections/shared/PageHeader.astro";

export interface Props {
  title: string;
  heading: string;
  breadcrumbItems: Array<{
    label: string;
    href?: string;
  }>;
}

const { title, heading, breadcrumbItems } = Astro.props;
---

<Main title={title}>
  <PageHeader heading={heading} breadcrumbItems={breadcrumbItems} />
  <slot />
</Main>
