---
import Main from "../layouts/Main.astro";
import Button from "../components/ui/Button.astro";
---

<Main title="About PerfectView">
  <section class="about-meet" aria-labelledby="about-meet-title">
    <div class="about-meet__container container">
      <!-- LEFT -->
      <div class="about-meet__image-container">
        <picture>
          <img
            src="/images/about-jerry-sarah.png"
            alt="Jerry and Sarah Fry smiling on a hike near a waterfall"
            class="about-meet__image"
            width="630"
            height="731"
            loading="lazy"
            decoding="async"
          />
        </picture>
      </div>

      <!-- RIGHT -->
      <div class="about-meet__content">
        <h2 id="about-meet-title" class="about-meet__title">
          Meet the Heart Behind<br />PerfectView Window Coverings
        </h2>

        <div class="about-meet__paragraph">
          <p>
            Jerry and Sarah Fry bring expertise, warmth, and personal care to
            every project, treating clients like friends and neighbors.
          </p>
          <p>
            With over 15 years of experience, Jerry and Sarah combine
            professional skill with genuine hospitality. As owners and
            operators, they handle each step—from consultation to
            installation—ensuring every detail meets their high standards and
            every client feels valued.
          </p>
        </div>

        <div class="about-meet__cta">
          <Button href="/about/mission" color="secondary">
            Get to Know Our Mission
          </Button>
        </div>

        <aside class="about-meet__card" aria-label="Client satisfaction">
          <div class="about-meet__stars" aria-hidden="true">★★★★★</div>
          <div class="about-meet__card-title">100% Client Satisfaction</div>
          <p class="about-meet__card-text">
            Our clients trust us for transparent, hassle-free solutions tailored
            to their needs.
          </p>
        </aside>
      </div>
    </div>
  </section>

  <style>
    .about-meet__container {
      display: flex;
      flex-direction: column;
      gap: 35px;
    }
    /* LEFT */
    .about-meet__image-container {
      display: block;
      max-width: 100%;
    }

    .about-meet__image {
      display: block;
      width: 100%;
      height: auto;
      object-fit: cover;
    }
    /* RIGHT */
    .about-meet__title {
      margin-bottom: 16px;
    }
    .about-meet__paragraph p:first-child {
      padding-bottom: 12px;
    }

    /* CTA: fluid up to 586px with spec padding/gap */
    .about-meet__cta {
      margin-top: 32px;
    }

    .about-meet__cta :where(a, button) {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      box-sizing: border-box;
      padding: 32px;
      width: 100%;
      max-width: 586px;
      max-height: 188px;
      line-height: 1.2;
      white-space: normal;
    }

    .about-meet__card {
      margin-top: 64px;
      background: var(--grey-10, #f4f5f6);
      border: 1px solid color-mix(in srgb, #000 8%, transparent);
      border-radius: 6px;
      padding: 32px;
      width: 100%;
      max-width: 586px;
      display: grid;
    }

    .about-meet__stars {
      letter-spacing: 2px;
      font-size: 18px;
      color: #cdae69;
      margin-bottom: 14px;
    }

    .about-meet__card-title {
      font-weight: var(--fw-semibold, 600);
      color: var(--primary);
      font-family: var(--ff-body);
      margin-bottom: 4px;
    }

    .about-meet__card-text {
      margin: 0;
      font-size: var(--fs-body-s);
      line-height: 1.55;
    }

    /* --- Media Queries --- */
    @media (min-width: 690px) {
      .about-meet__title {
        width: 100%;
      }
    }

    @media (min-width: 1024px) {
      .about-meet__container {
        flex-direction: row;
        align-items: stretch;
        gap: 40px;
        min-height: 600px;
      }
      .about-meet__image-container {
        width: 50%;
        flex: 1 1 50%; 
        display: flex;
        align-items: stretch;
      }
      .about-meet__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center; 
        flex: 1 1 auto; 
        min-height: 0; 
      }
      .about-meet__content {
        width: 50%;
        flex: 1 1 50%; 
        display: flex;
        flex-direction: column;
        max-width: 630px;
      }
    }
    @media (min-width: 1200px) {
      .about-meet__container {
        min-height: 700px;
      }
    }
  </style>
</Main>
