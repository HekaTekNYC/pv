---
import Inner from "../layouts/Inner.astro";
import ServicesHero from "../components/sections/services/ServicesHero.astro";
import OurProcess from "../components/sections/services/OurProcess.astro";
import ServicesDesign from "../components/sections/services/ServicesDesign.astro";
import CTABannerSplit from "../components/sections/shared/CTABannerSplit.astro";
import ServicesInstall from "../components/sections/services/ServicesInstall.astro";
import FAQ from "../components/sections/services/FAQ.astro";

import { bannerServicesData } from "../data/banner-data";
---

<Inner
  title="PerfectView Services"
  heading="Services"
  breadcrumbItems={[{ label: "Home", href: "/" }, { label: "Services" }]}
>
  <ServicesHero />
  <OurProcess />
  <ServicesDesign />
  <CTABannerSplit
    image={bannerServicesData.image}
    content={bannerServicesData.content}
  />
  <ServicesInstall />
  <FAQ />
</Inner>
